.columns.is-centered
  .column.is-half
    .box
      = simple_form_for(@post) do |f|
        .field
          = f.label :title, class: 'label'
          .control
            = f.input_field :title, class: 'input'
        .field  
          = f.label :content, class: 'label'
          .control
            = f.input_field :content, class: 'textarea'
        
        .field
          .buttons.has-text-centered
            = f.button :submit, class: 'button is-primary'
            = link_to posts_path, class: 'button is-dark is-outlined' do
              %span Cancel
              %span.icon
                %i.fa.fa-ban