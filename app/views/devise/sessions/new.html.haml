%h1.title.is-3.has-text-centered Log in

.columns.is-centered
  .column.is-one-third
    .box
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :email, class: 'label'
          .control
            = f.input_field :email, required: false, autofocus: true, class: 'input'
        
        .field
          = f.label :password, class: 'label'
          .control
            = f.input_field :password, required: false, class: 'input'

        .field
          = f.input :remember_me, as: (:boolean if devise_mapping.rememberable?), label_html: { class: 'checkbox' }

        .form-actions.has-text-centered{style: 'margin-bottom: 20px'}
          = f.button :submit, "Log in", class: 'button is-primary is-medium'
        
        .buttons.has-text-right
          = render "devise/shared/links"
