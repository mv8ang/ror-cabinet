%h1.title.is-3.has-text-centered Sign up

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .columns.is-centered
    .column.is-one-third
      .box
        .field.has-text-danger
          = f.error_notification
  
        .field
          = f.label :email, class: 'label'
          .control
            = f.input_field :email, required: true, autofocus: true, class: 'input'

        .field
          = f.label :password, class: 'label'
          .control
            = f.input_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'input'
        
        .field
          = f.label :password_confirmation, class: 'label'
          .control
            = f.input_field :password_confirmation, required: true, class: 'input'

        .field.has-text-centered
          = f.button :submit, "Sign up", class: 'button is-primary is-medium'

        .buttons.has-text-right
          = render "devise/shared/links"
